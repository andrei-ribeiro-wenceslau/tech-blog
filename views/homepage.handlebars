{{#each posts as |post|}}

  <div class="row">

    <div class="container blogBox">
			<div class="row  justify-content-center headerRow">
      <div class="col-8">
        <h2>
          <a class="blogTitle text-uppercase" href="/post/{{post.id}}">{{post.title}}</a>
        </h2>
      </div>

      <div class="col-4">
        <p class="blogCreate text-right">Posted by
          {{post.user.username}}
          on
          {{format_date post.date_created}}
        </p>
      </div>
			</div>
    <div class="blogDesc">
      <p class="text-left blogDescMain">
        {{post.content}}
      </p>
    </div>
    </div>

  </div>

{{/each}}